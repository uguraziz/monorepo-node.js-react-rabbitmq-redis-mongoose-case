{
  "name": "nodelabs-case",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev:web": "pnpm --filter @nodelabs/web dev",
    "build:web": "pnpm --filter @nodelabs/web build",
    "lint:web": "pnpm --filter @nodelabs/web lint",
    "dev:api": "pnpm --filter @nodelabs/api dev",
    "dev:worker": "pnpm --filter @nodelabs/worker dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.3.3"
  }
}

